%head
  %meta{:charset=>"utf-8"}
  %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
  %title
    = section(:title)
  %meta{:name=>"description", :content=>"services for Hochschule München"}
  %meta{:name=>"viewport", :content=>"width=device-width, initial-scale=1.0"}

  %link{:rel=>"shortcut icon", :type=>"image/x-icon", :href=>"http://w3-mediapool.hm.edu/mediapool/media/_technik/img/_technik_1/favicon.ico", :media=>"screen"}
  %link{:rel=>"icon", :type=>"image/x-icon", :href=>"http://w3-mediapool.hm.edu/mediapool/media/_technik/img/_technik_1/favicon.ico", :media=>"screen"}

  %link{:href=>'http://fonts.googleapis.com/css?family=Poly|Chivo:400|Inconsolata', :rel=>'stylesheet'}
  %link{:rel=>"stylesheet", :href=>"/assets/css/screen.css"}

  %script{:src => "assets/js/modernizr-latest.js"}

%body
  #container
    %header
      - if show_title?
        %h1
          Hochschule München
          %br
          = section(:title)
    %nav
      %li
        %a{:href=>'/news'}
          Schwarzes Brett
      %li
        %a{:href=>'/rooms'}
          Raum Suche
      %li
        %a{:href=>'/mensa'}
          Mensa
    - ['error', 'notice'].each do |name|
      - unless (flash[name].nil? || flash[name].empty?)
        %div{:id => "flash_#{name}"}=flash[name]
    %div{:role=>"main"}
      = yield
    %footer
      %ul
        %li
          = section(:flattr)
        %li
          %a{:href=>"http://www.twitter.com/sch1zo", :rel=>"nofollow", :target=>"_blank"}
            %img{:src=>"http://twitter-badges.s3.amazonaws.com/twitter-c.png", :alt=>"Follow sch1zo on Twitter"}
        %li
          %a{:href=>"http://github.com/sch1zo", :rel=>"nofollow", :target=>"_blank"}
            Eger Andreas
        %li
          %a{:href=>"http://fi.cs.hm.edu", :rel=>"nofollow", :target=>"_blank"}
            Hochschule München
        %li
          %a{:href=>"http://www.studentenwerk-muenchen.de/mensa/speiseplan/index-de.html", :rel=>"nofollow", :target=>"_blank"}
            Studentenwerk München
